<!-- Products Table -->
<div class="card">
  <header class="card-header">
    <div class="d-flex justify-content-between align-items-center">
      <h3 class="card-title h5 mb-0"><%= title %></h3>
      <div class="d-flex gap-2">
        <form class="input-group">
          <input
            type="text"
            name="search"
            class="form-control"
            placeholder="Search products..."
            aria-label="Search products"
          />
          <button class="btn btn-outline-secondary" type="submit">
            <i class="bi bi-search"></i>
          </button>
        </form>
        <a href="/products/add" class="btn btn-primary">
          <i class="bi bi-plus-circle"></i> Add Product
        </a>
      </div>
    </div>
  </header>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th scope="col" class="w-15">Image</th>
            <th scope="col" class="w-20">Name</th>
            <th scope="col" class="w-15">Category</th>
            <th scope="col" class="w-15">Price</th>
            <th scope="col" class="w-15">Stock</th>
            <th scope="col" class="w-10">Status</th>
            <th scope="col" class="text-end">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(product => { %>
          <tr>
            <td>
              <img
                src="/images/<%= product.image %>"
                alt="<%= product.product_name %>"
                class="product-image"
              />
            </td>
            <td><%= product.product_name %></td>
            <td><%= product.category_name %></td>
            <td>â‚¬<%= product.price %></td>
            <td><%= product.stock %></td>
            <td>
              <span
                class="badge <%= product.stock === 0 ? 'bg-danger' : (product.stock < 20 ? 'bg-warning' : 'bg-success') %>"
              >
                <%= product.stock === 0 ? 'Out of Stock' : (product.stock < 20 ? 'Low Stock' : 'In Stock') %>
              </span>
            </td>
            <td class="text-end">
              <a
                href="/products/edit/<%= product.id %>"
                class="btn btn-sm btn-outline-primary"
              >
                <i class="bi bi-pencil"></i>
              </a>
              <a
                href="/products/delete/<%= product.id %>"
                onclick="return confirm('Are you sure?')"
                class="btn btn-sm btn-outline-danger"
              >
                <i class="bi bi-trash"></i>
              </a>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>
